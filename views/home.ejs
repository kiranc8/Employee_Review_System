<link rel="stylesheet" href="/css/home.css" />
<div class="wrapper">
  <div class="container">
    <% if (user.assignedReviews.length > 0) { %>
    <div class="assignedReview">
      <h2>Assigned Reviews</h2>
      <div id="assignReviews">
        <% for (let AssignedReview of user.assignedReviews) { %>
        <div class="review-item">
          <form action="completeReview" method="post">
            <label for="">To: <%= AssignedReview.toUser.name %></label>
            <textarea
              id="message"
              name="message"
              placeholder="Enter Review comments"
              required
            ></textarea>
            <input
              type="hidden"
              name="toUser"
              value="<%= AssignedReview.toUser._id %>"
            />
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
    <% } else { %>
    <div class="assignedReview-else">
      <p>No assigned reviews available.</p>
    </div>
    <% } %>
  </div>
  <div class="container">
    <% if (user.myReviews.length > 0) { %>
    <div class="myReview">
      <h2>My Reviews</h2>
      <div id="myReviews-div">
        <% for (let MyReview of user.myReviews) { %>
        <div class="review-item">
          <p>From: <%= MyReview.fromUser.name %></p>
          <p>Review: <span><%= MyReview.message %></span></p>
          <hr />
        </div>
        <% } %>
      </div>
    </div>
    <% } else { %>
    <div class="myReview-else">
      <p>You have not received any reviews yet.</p>
    </div>
    <% } %>
  </div>
</div>
